---
import { Image } from "astro:assets";
import instagram1 from "./instagram-1.jpg";
import instagram2 from "./instagram-2.jpg";
import instagram3 from "./instagram-3.jpg";
import twitterMedia from "./twitter_media.jpg";
import twitterProfile from "./twitter_profile.jpg";
import userImage from "./user.jpg";
import wikipedia from "./wikipedia.jpg";
import youtube1 from "./youtube-1.jpg";
import youtube2 from "./youtube-2.jpg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Day 8 - Encyclopedia</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Lato"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto+Condensed"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
    />
    <style>
      .body {
        color: #8290a9;
        background: radial-gradient(
          farthest-corner at 100% 0,
          #0e1928 0%,
          #2a3347 100%
        );
        font-size: 12px;
        line-height: 1.2;
      }

      .body,
      button {
        font-family: "Lato", sans-serif;
      }

      .background {
        display: flex;
        min-height: 100vh;
      }

      .container {
        position: relative;
        flex: 0 0 320px;
        margin: auto;
        padding: 10px;
      }

      .screen {
        position: relative;
        height: 500px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
        overflow: hidden;
      }

      .screen-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #0b0d14;
      }

      .screen-scrollable {
        height: 100%;
        overflow: auto;
      }

      .app-header {
        padding: 12px;
        background: #1b2330;
      }

      .app-body {
        padding: 12px;
      }

      .app-search {
        display: flex;
        align-items: center;
        padding: 8px 12px;
        background: #0b0d14;
        border-radius: 3px;
      }

      .app-search-icon {
        font-size: 10px;
        margin-right: 6px;
        color: #4a5c6c;
      }

      .app-search-control {
        flex: 1;
        display: block;
        background: none;
        border: none;
        color: #98a5be;
        font-size: 11px;
        font-weight: bold;
        outline: none;
      }

      .app-search-control::placeholder {
        color: #4a5c6c;
      }

      .page-info {
        display: flex;
        padding: 30px 0;
      }

      .page-info-left {
        flex: 0 0 80px;
        margin-right: 12px;
      }

      .page-image {
        width: 100%;
        border-radius: 10px;
      }

      .page-title {
        color: #fff;
        font-size: 24px;
      }

      .tabs {
        display: flex;
        justify-content: center;
      }

      .tab-wrapper {
        padding: 0 2px;
      }

      .tab {
        position: relative;
        padding: 2px 12px 4px;
        border-radius: 20px;
        font-size: 11px;
        cursor: pointer;
      }

      .tab:hover {
        background: #222a3a;
      }

      .tab.active {
        background: #005aff;
        color: #fff;
        font-weight: bold;
      }

      .tab.active:after {
        content: "";
        display: block;
        position: absolute;
        left: 12px;
        right: 12px;
        bottom: -13px;
        height: 2px;
        background: #005aff;
      }

      .card {
        margin-bottom: 12px;
        padding: 10px;
        background: #1b2330;
        border-radius: 3px;
      }

      .card:last-child {
        margin-bottom: 0;
      }

      .card-header {
        display: flex;
      }

      .card-link {
        display: block;
        margin-top: 12px;
        color: #8290a9;
        text-decoration: none;
      }

      .source {
        display: flex;
        align-items: center;
        padding: 0 8px 2px;
        border-radius: 20px;
        color: #fff;
        font-size: 10px;
      }

      .source.twitter {
        background: #01cef3;
      }

      .source.wikipedia {
        background: #000;
      }

      .source.instagram {
        background: #cf01a9;
      }

      .source.youtube {
        background: #e22b36;
      }

      .source-logo {
        margin-right: 3px;
      }

      .tweet-header {
        display: flex;
      }

      .tweet-user {
        display: flex;
        align-items: center;
        margin-right: auto;
      }

      .tweet-user-left {
        margin-right: 10px;
      }

      .tweet-photo {
        width: 40px;
        border-radius: 40px;
      }

      .tweet-name {
        font-weight: bold;
      }

      .tweet-username {
        margin-top: 2px;
        color: #4f5b6f;
        font-size: 11px;
      }

      .tweet-body {
        margin-top: 8px;
        line-height: 1.4;
      }

      .tweet-media {
        width: 100%;
        margin-top: 8px;
      }

      .tweet-media img {
        border-radius: 3px;
        height: 100px;
        object-fit: cover;
      }

      .tweet-footer {
        display: flex;
        justify-content: flex-end;
        margin-top: 8px;
      }

      .tweet-button {
        margin-left: 12px;
      }

      .tweet-button > .fas {
        margin-right: 2px;
      }

      .wiki-image {
        display: block;
        width: 96px;
        margin-left: 10px;
        float: right;
        border-radius: 3px;
      }

      .wiki-title {
        color: #fff;
        font-size: 20px;
      }

      .wiki-subtitle {
        color: #fff;
      }

      .wiki-content {
        margin-top: 16px;
        text-align: justify;
      }

      .instas {
        margin-top: 12px;
        display: flex;
      }

      .insta {
        flex: 1;
        margin-right: 5px;
      }

      .insta img {
        border-radius: 2px;
        object-fit: cover;
      }

      .insta:last-child {
        margin-right: 0;
      }

      .videos {
        margin-top: 12px;
        display: flex;
      }

      .video {
        flex: 1;
        display: flex;
        flex-direction: column;
        margin-right: 6px;
        text-decoration: none;
      }

      .video-thumbnail {
        position: relative;
      }

      .video-thumbnail img {
        object-fit: cover;
        aspect-ratio: 16 / 9;
      }

      .video-play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 30px;
        height: 30px;
        margin-top: -15px;
        margin-left: -15px;
        padding-top: 9px;
        padding-left: 11px;
        color: #fff;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 50px;
        opacity: 0.7;
      }

      .video-body {
        flex: 1 0 100px;
        padding: 5px;
        background: #222a3c;
        color: #fff;
        font-weight: bold;
      }

      .video-date {
        margin-top: 5px;
        font-size: 10px;
        color: #8290a9;
      }

      .video:last-child {
        margin-right: 0;
      }

      .link {
        color: #ad760b;
      }

      .credits {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
        font-family: "Roboto Condensed", sans-serif;
        font-size: 16px;
        font-weight: normal;
      }

      .credits-link {
        display: flex;
        align-items: center;
        color: #ec4989;
        font-weight: bold;
        text-decoration: none;
      }

      .dribbble {
        width: 20px;
        height: 20px;
        margin: 0 5px;
      }
    </style>
  </head>
  <body class="body">
    <div class="background">
      <div class="container">
        <div class="screen" id="app">
          <div class="screen-wrapper">
            <div class="screen-scrollable">
              <div class="app-header">
                <div class="app-header-top">
                  <div class="app-search">
                    <i class="app-search-icon fas fa-search"></i>
                    <input
                      class="app-search-control"
                      placeholder="Search a topic"
                    />
                  </div>
                </div>
                <div class="app-header-middle">
                  <div class="page-info">
                    <div class="page-info-left">
                      <Image
                        class="page-image"
                        src={userImage}
                        alt="Profile Picture"
                      />
                    </div>
                    <div class="page-info-right">
                      <div class="page-title">Jonathan Stroud</div>
                      <div class="page-desc">
                        Jonathan Anthony Stroud is an author of fantasy books,
                        mainly for children and youths.
                      </div>
                    </div>
                  </div>
                </div>
                <div class="app-header-bottom">
                  <div class="tabs">
                    <div class="tab-wrapper">
                      <div class="tab active">home</div>
                    </div>
                    <div class="tab-wrapper">
                      <div class="tab">profile</div>
                    </div>
                    <div class="tab-wrapper">
                      <div class="tab">photos</div>
                    </div>
                    <div class="tab-wrapper">
                      <div class="tab">videos</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="app-body">
                <div class="card">
                  <div class="card-header">
                    <div class="source twitter">
                      <div class="source-logo">
                        <i class="fab fa-twitter"></i>
                      </div>
                      <div class="source-name">twitter</div>
                    </div>
                  </div>
                  <div class="card-body">
                    <a
                      class="card-link tweet"
                      href="https://twitter.com/JonathanAStroud/status/1030441807979716608"
                      target="_blank"
                    >
                      <div class="tweet-header">
                        <div class="tweet-user">
                          <div class="tweet-user-left">
                            <Image
                              class="tweet-photo"
                              src={twitterProfile}
                              alt="Tweet"
                            />
                          </div>
                          <div class="tweet-user-right">
                            <div class="tweet-name">Jonathan Stroud</div>
                            <div class="tweet-username">@JonathanAStroud</div>
                          </div>
                        </div>
                        <div class="tweet-date">17 Aug</div>
                      </div>
                      <div class="tweet-body">
                        Iâ€™m in beautiful Opatija, Croatia, for the Sci-fi and
                        fantasy festival, <span class="link">@Liburnicon</span>!
                        A weekend of blue skies, blue seas and fine conversation
                        lies ahead... ðŸ˜Š
                      </div>
                      <div class="tweet-media">
                        <Image src={twitterMedia} alt="Twitter Media" />
                      </div>
                      <div class="tweet-footer">
                        <div class="tweet-button">
                          <i class="fas fa-reply"></i> 212k
                        </div>
                        <div class="tweet-button">
                          <i class="fas fa-comment-alt"></i> 321k
                        </div>
                      </div>
                    </a>
                  </div>
                </div>
                <div class="card">
                  <div class="card-header">
                    <div class="source wikipedia">
                      <div class="source-logo">
                        <i class="fab fa-wikipedia-w"></i>
                      </div>
                      <div class="source-name">wikipedia</div>
                    </div>
                  </div>
                  <div class="card-body">
                    <a
                      class="card-link wiki"
                      href="https://en.wikipedia.org/wiki/Jonathan_Stroud"
                      target="_blank"
                    >
                      <div class="wiki-title">Jonathan Stroud</div>
                      <div class="wiki-subtitle">Writer</div>
                      <div class="wiki-content">
                        <Image
                          class="wiki-image"
                          src={wikipedia}
                          alt="Jonathan Stroud"
                        />
                        Born in 1970 in Bedford, England, Stroud began to write stories
                        at a very young age. He grew up in St Albans where he attended
                        Wheatfields Junior School and St Albans Boys' School. He
                        enjoyed reading books, drawing pictures, and writing stories.
                        Between the ages seven and nine he was often ill, so he spent
                        most of his days in the hospital or in his bed at home. To
                        escape boredom, he would occupy himself with books and stories.
                        After he completed his studies of English literature at the
                        University of York, he worked in London as an editor for
                        the Walker Books store. During the 1990s, he started publishing
                        his own works and quickly gained success.
                      </div>
                    </a>
                  </div>
                </div>
                <div class="card">
                  <div class="card-header">
                    <div class="source instagram">
                      <div class="source-logo">
                        <i class="fab fa-instagram"></i>
                      </div>
                      <div class="source-name">instagram</div>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="instas">
                      <a
                        class="insta"
                        href="https://www.instagram.com/p/BjCLCrRlMN1"
                        target="_blank"
                      >
                        <Image src={instagram1} alt="Instagram 1" />
                      </a>
                      <a
                        class="insta"
                        href="https://www.instagram.com/p/Bgemdv_Dq2h"
                        target="_blank"
                      >
                        <Image src={instagram2} alt="Instagram 2" />
                      </a>
                      <a
                        class="insta"
                        href="https://www.instagram.com/p/BZcBDwInl3e"
                        target="_blank"
                      >
                        <Image src={instagram3} alt="Instagram 3" />
                      </a>
                    </div>
                  </div>
                </div>
                <div class="card">
                  <div class="card-header">
                    <div class="source youtube">
                      <div class="source-logo">
                        <i class="fab fa-youtube"></i>
                      </div>
                      <div class="source-name">youtube</div>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="videos">
                      <a
                        class="video"
                        href="https://www.youtube.com/watch?v=mca5xyTxZbw"
                        target="_blank"
                      >
                        <div class="video-thumbnail">
                          <Image src={youtube1} alt="Youtube 1" />
                          <div class="video-play-button">
                            <i class="fas fa-play"></i>
                          </div>
                        </div>
                        <div class="video-body">
                          <div class="video-title">
                            Jonathan Stroud - Fan Questions
                          </div>
                          <div class="video-date">Nov 14, 2014</div>
                        </div>
                      </a>
                      <a
                        class="video"
                        href="https://www.youtube.com/watch?v=9VdKW4teB6k"
                        target="_blank"
                      >
                        <div class="video-thumbnail">
                          <Image src={youtube2} alt="Youtube 2" />
                          <div class="video-play-button">
                            <i class="fas fa-play"></i>
                          </div>
                        </div>
                        <div class="video-body">
                          <div class="video-title">
                            Jonathan Stroud - Lockwood & Co.: The Creeping
                            Shadow
                          </div>
                          <div class="video-date">Dec 27, 2016</div>
                        </div>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="credits">
          inspired by
          <a
            class="credits-link"
            href="https://dribbble.com/shots/4417971-UI-for-Personal-character"
            target="_blank"
          >
            <svg class="dribbble" viewBox="0 0 200 200">
              <g stroke="#EC4989" fill="none">
                <circle cx="100" cy="100" r="90" stroke-width="20"></circle>
                <path
                  d="M62.737004,13.7923523 C105.08055,51.0454853 135.018754,126.906957 141.768278,182.963345"
                  stroke-width="20"></path>
                <path
                  d="M10.3787186,87.7261455 C41.7092324,90.9577894 125.850356,86.5317271 163.474536,38.7920951"
                  stroke-width="20"></path>
                <path
                  d="M41.3611549,163.928627 C62.9207607,117.659048 137.020642,86.7137169 189.041451,107.858103"
                  stroke-width="20"></path>
              </g>
            </svg>
            Erics
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
